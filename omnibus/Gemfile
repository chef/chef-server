source 'https://rubygems.org'

gem 'rake'
gem 'chefspec'
gem 'berkshelf'
gem 'bundler', '>1.10'

# Install omnibus software
group :omnibus do
  gem 'omnibus', git: 'https://github.com/chef/omnibus'
  gem 'omnibus-software', git: 'https://github.com/christopher-snapp/omnibus-software', branch: 'csnapp/add_libnsl'
  gem 'artifactory'
end

group :test do
  gem 'rspec'
end
