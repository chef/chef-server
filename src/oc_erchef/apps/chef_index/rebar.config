{plugins, [pc,
           {efast_xs, ".*",
            {git, "https://github.com/chef/efast_xs", {branch, "master"}}},
           {rebar3_neotoma_plugin, ".*",
            {git, "https://github.com/tsloughter/rebar3_neotoma_plugin", {branch, "master"}}}
          ]}.

{port_specs, [{"priv/cs_escape.so", ["c_src/*.c"]}]}.

{provider_hooks, [
                  {pre, [
                         {compile, {neotoma, compile}},
                         {compile, {pc, compile}},
                         {clean, {pc, clean}}
                        ]
                  }]}.
