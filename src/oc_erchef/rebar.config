%% -*- mode: erlang -*-
%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et

{require_otp_vsn, "24.2"}.

{deps, [
    %% lager has to come first since we use its parse transform
    {lager, ".*",
        {git, "https://github.com/erlang-lager/lager",              {branch, "master"}}},
    {bcrypt, ".*",
        {git, "https://github.com/abhay/erlang-bcrypt",             {branch, "master"}}},
    {cf, "",
        {git, "https://github.com/project-fifo/cf",                 {branch, "master"}}},
    {chef_authn, ".*",
        {git, "https://github.com/chef/chef_authn",                 {branch, "master"}}},
    {chef_secrets, ".*",
        {git, "https://github.com/chef/chef_secrets",               {branch, "lbaker/upgrade-erlang-24.2"}}},
    {darklaunch, ".*",
        {git, "https://github.com/chef/opscode-darklaunch-erlang",  {branch, "master"}}},
    {edown, ".*",
        {git, "https://github.com/uwiger/edown",                    {branch, "master"}}},
    {efast_xs, ".*",
        {git, "https://github.com/chef/efast_xs",                   {branch, "master"}}},
    {ej, ".*",
        {git, "https://github.com/chef/ej",                         {branch, "master"}}},
    {envy, ".*",
        {git, "https://github.com/markan/envy",                     {branch, "master"}}},
    {eper, ".*",
        {git, "https://github.com/massemanet/eper",                 {branch, "master"}}},
    {erlcloud, ".*",
        {git, "https://github.com/chef/erlcloud",                   {branch, "lbaker/presigned"}}},
    {erlware_commons, ".*",
        {git, "https://github.com/chef/erlware_commons",            {branch, "lbaker/fix_for_ftmap"}}},
    {folsom, ".*",
        {git, "https://github.com/boundary/folsom",                 {tag, "0.8.2"}}},
    {folsom_graphite, ".*",
        {git, "https://github.com/chef/folsom_graphite",            {branch, "master"}}},
    {ibrowse, ".*",
        {git, "https://github.com/chef/ibrowse",                    {branch, "chef-server"}}},
     %% latest version of jiffy i could find that doesn't
     %% break oc_erchef_unit and oc_bifrost on master verify
     %% pipeline.  could also try the two commits directly
     %% after this SHA
    {jiffy, ".*",
        {git, "https://github.com/davisp/jiffy",                    {branch, "master"}}},
    {mini_s3, ".*",
        {git, "https://github.com/chef/mini_s3",                    {branch, "master"}}},
    {mixer, ".*",
        {git, "https://github.com/chef/mixer",                      {tag, "0.1.1"}}},
    {mochiweb, ".*",
        {git, "https://github.com/mochi/mochiweb",                  {branch, "master"}}},
    {neotoma, ".*",
        {git, "https://github.com/seancribbs/neotoma",              {tag,    "1.7.2"}}},
    {observer_cli, ".*",
        {git, "https://github.com/zhongwencool/observer_cli",       {branch, "master"}}},
    {opscoderl_folsom, ".*",
        {git, "https://github.com/chef/opscoderl_folsom",           {branch, "master"}}},
    {opscoderl_httpc, ".*",
        {git, "https://github.com/chef/opscoderl_httpc",            {branch, "master"}}},
    {opscoderl_wm, ".*",
        {git, "https://github.com/chef/opscoderl_wm",               {branch, "master"}}},
    {pooler, ".*",
        {git, "https://github.com/chef/pooler",                     {branch, "master"}}},
    {prometheus, ".*",
        {git, "https://github.com/deadtrickster/prometheus.erl",    {tag, "v4.6.0"}}},
    {sqerl, ".*",
        {git, "https://github.com/chef/sqerl",                      {branch, "master"}}},
    {stats_hero, ".*",
        {git, "https://github.com/chef/stats_hero",                 {branch, "master"}}},
    {sync, ".*",
        {git, "https://github.com/rustyio/sync",                    {branch, "master"}}},
    {uuid, ".*",
        {git, "https://github.com/okeuday/uuid",                    {tag, "v1.6.0"}}}
]}.

{cover_enabled, true}.
{cover_print_enabled, true}.
{eunit_opts, [verbose]}.

{erl_opts, [
            {d, 'OC_CHEF'},
            {d, 'CHEF_DB_DARKLAUNCH', xdarklaunch_req},
            {d, 'CHEF_WM_DARKLAUNCH', xdarklaunch_req},
            {parse_transform, lager_transform},
                warnings_as_errors,
                debug_info,
            {platform_define, "^[0-9]+", namespaced_types},
            {i, "include"},
            {i, "../../../include"}
           ]}.

{ct_opts, [
    {dir, [
           "apps/chef_db/itest",
           "apps/oc_chef_authz/itest",
           "apps/oc_chef_wm/itest"
          ]}]}.

{overrides, [
    {override, jiffy, [
        {plugins, [pc]},
        {provider_hooks, [
                {post, [
                    {compile, {pc, compile}},
                    {clean, {pc, clean}}
                ]}
        ]}
    ]}
]}.


{plugins, [
            pc,
            rebar3_neotoma_plugin
            ]}.

{profiles, [
    {test, [
        {deps, [
            meck,
            {automeck,
                {git, "https://github.com/chef/automeck", {branch, "master"}}},
            %% NOTE: PROPER IS GPL V3, IT MUST REMAIN A TEST ONLY DEP. (Unpin once we're on R19, as proper now requires a recent erlang)
            {proper, {git, "https://github.com/manopapad/proper", {ref, "cb73e68ad5b46ec11b0accc5c724647556a276a0"}}}
               ]},
        {erl_opts, [export_all]}
       ]},
    {dev, [
        {relx, [{dev_mode, true},
                {include_src, true}
               ]}
    ]}
]}.

{pre_hooks, [
    {clean, "make bundle_clean version_clean"},
    {compile, "make bundle VERSION"}
]}.

{dialyzer,[
    {plt_location, "_dialyzer_cache/"},
    {plt_extra_apps, [
        webmachine,
        common_test,
        ssl,
        eunit
    ]}
]}.

{relx, [
    {release,{oc_erchef,{cmd,"cat VERSION"}}, [
        chef_secrets,
        oc_erchef,
        {sync, load},
        {eunit, load},
        {mixer, load},
        syntax_tools,
        compiler,
        eper,
        observer_cli,
        efast_xs
    ]},

    {include_erts, false},
    {include_src, false},
    {extended_start_script,true},
    {overlay_vars,"config/vars.config"},
    {overlay,[{mkdir,"log/sasl"},
              {mkdir,"lib/patches"},
              {mkdir,"etc/keys"},
              {copy,"schema","."},
              {copy,"priv/reindex-opc-organization",
                    "bin/reindex-opc-organization"},
              {template,"config/app.config","sys.config"}]}
]}.
